{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Assemble and Link NES",
        "type": "shell",
        "command": "path_to_ca65",
        "args": [
          "demo.s",
          "-g",
          "-o",
          "demo.o"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Assembles an NES project using cc65."
      },
      {
        "label": "Build NES",
        "type": "shell",
        "command": "path_to_ld65",
        "args": [
          "-t", "nes",
          "-o", "demo.nes",
          "demo.o",
          "--dbgfile", "demo.dbg"
        ],
        "group": "build",
        "dependsOn": "Assemble and Link NES",
        "detail": "Links the NES object file to create a ROM."
      }
    ]
  }